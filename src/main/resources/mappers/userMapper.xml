<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.allured.yourRecipe.user.dao.UserDAO">
 	<insert id="insertUser" parameterType="map">
 		INSERT INTO 
 			`user`
 		(
 			`loginId`
 			, `password`
 			, `nickname`
 			, `email`
 			, `createdAt`
 			, `updatedAt`
 		) 
 		VALUES
 		(
 			#{loginId}
 			, #{password}
 			, #{nickname}
 			, #{email}
 			, now()
 			, now()
 		)
 	</insert>
 	
 	<select id="selectUser" parameterType="map" resultType="com.allured.yourRecipe.user.model.User">
 		SELECT
 			`id` 
 			, `loginId`
 			, `password`
 			, `nickname`
 			, `email`
 			, `profileImgUrl`
 			, `createdAt`
 			, `updatedAt`
 		FROM
 			`user`
 		WHERE
 			`loginId` = #{loginId}
 		AND `password` = #{password}
 	</select>
 	
 	<select id="selectUserById" parameterType="String" resultType="int">
 		SELECT
 			COUNT(1)
 		FROM
 			`user`
 		WHERE
 			`loginId` = #{loginId}
 	</select>
 	
 	<select id="selectUserByNickname" parameterType="String" resultType="int">
 		SELECT
 			COUNT(1)
 		FROM
 			`user`
 		WHERE
 			`nickname` = #{nickname}
 	</select>
 </mapper>